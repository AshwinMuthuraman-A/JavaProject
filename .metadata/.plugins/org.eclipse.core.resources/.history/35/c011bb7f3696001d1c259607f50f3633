package com.example.demo.services;

public class UserServiceImpl implements UserService {

	@Autowired
	private UserRepo userrepos;
	
	@Override
	public void createUser(@RequestBody User user) throws ConstraintViolationException, UserCollectionException {
		Optional<User> userExist = userrepos.findByEmail(user.getEmail());
		if(userExist.isPresent()) {
			throw new UserCollectionException(UserCollectionException.EmailAlreadyExists());
		}
		else {
			userrepos.insert(user);
		}
	}

}